<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp">


    <ImageView
        android:contentDescription="@string/image"
        android:id="@+id/p_back"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/next_p"
        app:layout_constraintStart_toStartOf="@+id/textView_p"
        app:layout_constraintTop_toTopOf="@+id/next_p"
        app:srcCompat="@drawable/ic_back"
        app:tint="@color/color_5" />

    <TextView
        android:id="@+id/textView_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/personal_info"
        android:textColor="@color/color_2"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/email"
        android:textColor="@color/color_2"
        app:layout_constraintStart_toStartOf="@+id/textView_p"
        app:layout_constraintTop_toBottomOf="@+id/textView_p" />

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:background="@drawable/bg_card"
        android:fontFamily="@font/quicksand_bold"
        android:hint="@string/space"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:includeFontPadding="false"
        android:inputType="textEmailAddress"
        android:textColor="@color/color_1"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <TextView
        android:id="@+id/Name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/name"
        android:textColor="@color/color_2"
        app:layout_constraintStart_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/email_edit" />

    <EditText
        android:id="@+id/name_edit_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:background="@drawable/bg_card"
        android:fontFamily="@font/quicksand_bold"
        android:hint="@string/space"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:includeFontPadding="false"
        android:inputType="textMultiLine"
        android:textColor="@color/color_1"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Name_1"
        app:layout_constraintTop_toBottomOf="@+id/Name_1" />

    <TextView
        android:id="@+id/phone_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/phone_no"
        android:textColor="@color/color_2"
        app:layout_constraintStart_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/name_edit_1" />

    <EditText
        android:id="@+id/phone_edit_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_card"
        android:fontFamily="@font/quicksand_bold"
        android:hint="@string/space"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:includeFontPadding="false"
        android:inputType="number"
        android:textColor="@color/color_1"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/phone_1"
        app:layout_constraintTop_toBottomOf="@+id/phone_1"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/next_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/color_5"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/next"
        android:textColor="@color/color_4"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/phone_edit_1"
        app:layout_constraintTop_toBottomOf="@+id/phone_edit_1" />


</androidx.constraintlayout.widget.ConstraintLayout>